{% extends "ClarolineCoreBundle:administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'external_user_group_parameters' | trans({}, 'claro_external_user_group') | striptags | raw }}{% endblock %}
{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}
{% block breadcrumb %}
    {{
    macros.breadcrumbs([
    {
        'icon': 'fa fa-cog',
        'name': 'administration'|trans({}, 'platform'),
        'href': path('claro_admin_index')
    },
    {
        'name': 'parameters'|trans({}, 'platform'),
        'href': path('claro_admin_index')
    },
    {
        'name': 'external_user_group_parameters'|trans({}, 'claro_external_user_group'),
        'href': ''
    }
    ])
    }}
{% endblock %}

{% block content %}
    <div
        class="page-container external-sync-container"
        data-sources="{{ sources| json_serialize(['Default']) | json_encode | raw }}"
    ></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ hotAsset('dist/claroline-distribution-main-authentication-external-sync-config.js') }}"></script>
{% endblock%}
