{% extends 'ClarolineCoreBundle::layout.html.twig' %}

{% block title %}{{ 'login_with_third_party'|trans({'%name%':serverName}, 'platform') }}{% endblock %}

{% block content %}
    <div class="col-sm-4 col-sm-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{ 'login_with_third_party'|trans({'%name%':serverName}, 'platform') }}</h3>
            </div>
            <div class="panel-body">
                {{ 'ldap_check_connexion_info'|trans({}, 'ldap') }}
            </div>
            <div class="third-party-login-list-group list-group">
                {% if claroUser is not empty %}
                    <a href="{{ path('claro_ldap_link_account_mail', {'name': serverName}) }}" class="list-group-item claco-thrid-party-login-choice-btn"><i class="fa fa-at"></i> {{ 'link_cas_to_account_mail'|trans({ '%email%': claroUser.email },'claroline_cas') }}</a>
                {% endif %}
                <a href="{{ path('claro_ldap_login_link', {'name': serverName}) }}" class="list-group-item claco-thrid-party-login-choice-btn"><i class="fa fa-chain"></i> {{ 'link_cas_to_account'|trans({},'claroline_cas') }}</a>
                {% if selfRegistration == true %}
                    <a href="{{ path('claro_ldap_register', {'name': serverName}) }}" class="list-group-item claco-thrid-party-login-choice-btn"><i class="fa fa-plus"></i> {{ 'create_new_cas_account'|trans({},'claroline_cas') }}</a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}