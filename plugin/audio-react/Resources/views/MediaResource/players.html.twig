{% extends "ClarolineCoreBundle:Resource:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="{{ themeAsset('claroline-distribution-plugin-audio-react-audio.css') }}" />
{% endblock %}

{% block content %}
    <div 
        class="page-container audio-react-player-container"
        data-audio="{{_resource | json_encode}}"
        data-resource-node="{{ _resource.resourceNode | api_serialize | json_encode | raw | escape }}"
        data-url="{{ url('claro_file_get_media', {'node': _resource.resourceNode.id}) | json_encode | raw | escape }}"

        > 
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ hotAsset('dist/claroline-distribution-plugin-audio-react-player.js') }}"></script>
    <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'audio_react' }) }}"></script>

{% endblock %}
